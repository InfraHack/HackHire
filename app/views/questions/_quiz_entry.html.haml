.question
  %h1 Question ##{question['id']}
  .display
  %h5= question['prompt']
  = form_tag "/questions/#{question['id']}/answer", id: "question_#{question['id']}" do
    = hidden_field_tag 'id', question['id']
    %ul.question
      - question.choices.each_with_index do |choice, i|
        %li.choice
          = check_box_tag "answer_#{i}", choice
          = label_tag "answer_#{i}", choice
    = submit_tag 'Save'
